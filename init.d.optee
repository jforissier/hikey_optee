#!/bin/sh
#
# /etc/init.d/optee
#
# Start/stop OP-TEE services (kernel module and supplicant) 
#
case "$1" in
    start)
	if [ -e /bin/tee-supplicant -a -e /dev/teepriv0 ]; then
		echo "Starting OP-TEE supplicant..."
		tee-supplicant&
		exit 0
	else
		echo "OP-TEE supplicant or device not found"
	fi

        ;;
    stop)
	killall tee-supplicant
	;;
esac
